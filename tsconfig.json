{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "~/shared/*": ["./src/shared/*"],
      "~/infra/*": ["./src/infra/*"],
      "~/domain/*": ["./src/domain/*"]
    }
  }
}
